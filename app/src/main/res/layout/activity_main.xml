<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#AED6F1"
    >


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recyclerview"
        app:layout_constraintTop_toBottomOf="@id/input_button"
        app:layout_constraintBottom_toTopOf="@id/errorText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="103dp"
        android:layout_marginBottom="53dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <Button
        android:id="@+id/input_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button"

        app:layout_constraintTop_toBottomOf="@id/input_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="6dp"
        />

    <EditText
        android:id="@+id/input_text"
        android:layout_height="wrap_content"
        android:ems="10"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="670dp"
        app:layout_constraintTop_toBottomOf="@id/my_recyclerview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/input_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent" />

    <TextView
        android:id="@+id/errorText"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#EA1F1B"
        android:layout_marginBottom="20dp"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="670dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>

